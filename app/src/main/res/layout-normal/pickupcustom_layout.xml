<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6ffff">

    <android.support.v7.widget.CardView
        android:id="@+id/view8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <com.uactiv.activity.MyImageview
                    android:id="@+id/gifImageView"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="45dp"
                    android:scaleType="fitXY" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_pic"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center_horizontal"
                    android:visibility="visible" />

                <com.uactiv.widgets.CustomTextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_toEndOf="@+id/iv_pic"
                    android:layout_toRightOf="@+id/iv_pic"
                    android:text="Mumbai Riders!"
                    android:textColor="#3A445E"
                    android:textSize="13sp"
                    custom:typeface="Brandon_med" />

                <com.uactiv.widgets.CustomTextView
                    android:id="@+id/tv_pickupname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tv_title"
                    android:layout_alignStart="@+id/tv_title"
                    android:layout_below="@+id/imageView9"
                    android:text="Shared a yoga pickup!"
                    android:textColor="#3A445E"
                    android:textSize="12sp"
                    custom:typeface="Brandon_reg" />

                <com.uactiv.widgets.CustomTextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignRight="@+id/imageView9"
                    android:layout_alignTop="@+id/tv_pickupname"
                    android:layout_marginRight="8dp"
                    android:text="7 hours ago"
                    android:textColor="#9AA3B2"
                    android:textSize="12sp"
                    custom:typeface="Brandon_reg" />

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignBottom="@+id/tv_title"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="11dp"
                    android:layout_marginRight="11dp"
                    android:src="@drawable/dots"
                    android:visibility="invisible" />

                <com.uactiv.widgets.CustomButton
                    android:id="@+id/btn_knowmore"
                    android:layout_width="66dp"
                    android:layout_height="22dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignRight="@+id/tv_time"
                    android:layout_alignTop="@+id/gifImageView"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="4dp"

                    android:background="@drawable/btn_shape_konwmore"
                    android:text="Know more"
                    android:textAllCaps="false"
                    android:textSize="8sp"
                    custom:typeface="Brandon_med" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/view8"
                android:layout_alignStart="@+id/view8"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/pickuplayout"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"

                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/calenn"
                                android:layout_width="0dp"
                                android:layout_height="14dp"
                                android:layout_below="@+id/imageView13"
                                android:layout_marginTop="2dp"
                                android:layout_weight="0.4"
                                android:src="@drawable/calenn" />

                            <com.uactiv.widgets.CustomTextView
                                android:id="@+id/tv_date"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_date"
                                android:layout_marginLeft="8dp"
                                android:layout_marginTop="1dp"
                                android:layout_toEndOf="@+id/sports"
                                android:layout_toLeftOf="@+id/imageView14"
                                android:layout_toRightOf="@+id/sports"
                                android:layout_toStartOf="@+id/imageView14"
                                android:layout_weight="1.4"
                                android:text="Tue,Nov 8,2017"
                                android:textColor="#3a445e"
                                android:textSize="10.50sp"
                                custom:typeface="Brandon_med" />


                            <ImageView
                                android:id="@+id/imageView14"
                                android:layout_width="0dp"
                                android:layout_height="12dp"
                                android:layout_below="@+id/imageView14"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="2dp"
                                android:layout_toRightOf="@+id/tv_spots"
                                android:layout_weight="0.3"
                                android:src="@drawable/mycustclock" />
                            .

                            <com.uactiv.widgets.CustomTextView
                                android:id="@+id/tv_pickup_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignEnd="@+id/tv_pickup_time"
                                android:layout_alignRight="@+id/tv_pickup_time"
                                android:layout_below="@+id/tv_pickup_time"
                                android:layout_marginLeft="8dp"
                                android:layout_marginTop="1dp"
                                android:layout_toRightOf="@+id/ruppee"
                                android:layout_weight="0.9"
                                android:text="19:00PM"
                                android:textColor="#3a445e"
                                android:textSize="10.50sp"
                                custom:typeface="Brandon_med" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/sports"
                                    android:layout_width="0dp"
                                    android:layout_height="13dp"
                                    android:layout_below="@+id/imageView13"
                                    android:layout_marginTop="8dp"
                                    android:layout_weight="0.4"
                                    android:src="@drawable/spotss" />

                                <com.uactiv.widgets.CustomTextView
                                    android:id="@+id/tv_spots"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/tv_date"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginTop="8dp"
                                    android:layout_toEndOf="@+id/sports"
                                    android:layout_toLeftOf="@+id/imageView14"
                                    android:layout_toRightOf="@+id/sports"
                                    android:layout_toStartOf="@+id/imageView14"
                                    android:layout_weight="1.9"
                                    android:text="unlimited spots"
                                    android:textColor="#3a445e"
                                    android:textSize="10.50sp"
                                    custom:typeface="Brandon_med" />

                                <ImageView
                                    android:id="@+id/iv_location"
                                    android:layout_width="0dp"
                                    android:layout_height="13dp"
                                    android:layout_marginTop="8dp"
                                    android:layout_weight="0.4"
                                    android:src="@drawable/venues" />

                                <com.uactiv.widgets.CustomTextView
                                    android:id="@+id/tv_paid"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/tv_date"
                                    android:layout_marginLeft="6dp"
                                    android:layout_marginTop="8dp"
                                    android:layout_weight="1.8"
                                    android:text="N M joshi marg "
                                    android:textColor="#3a445e"
                                    android:textSize="10.50sp"
                                    custom:typeface="Brandon_med" />


                                <!-- <ImageView
                                     android:id="@+id/iv_location"
                                     android:layout_width="0dp"
                                     android:layout_height="12dp"
                                     android:layout_weight="0.3"
                                     android:layout_below="@+id/imageView14"
                                     android:layout_marginLeft="25dp"
                                     android:layout_marginTop="8dp"
                                     android:layout_toRightOf="@+id/tv_spots"
                                     android:src="@drawable/venues" />

                                 <com.uactiv.widgets.CustomTextView
                                     android:id="@+id/tv_paid"
                                     android:layout_width="wrap_content"
                                     android:layout_height="wrap_content"
                                     android:layout_weight="0.9"
                                     android:layout_alignEnd="@+id/tv_pickup_time"
                                     android:layout_alignRight="@+id/tv_pickup_time"
                                     android:layout_below="@+id/tv_pickup_time"
                                     android:layout_marginLeft="8dp"
                                     android:layout_marginTop="9dp"
                                     android:layout_toRightOf="@+id/ruppee"
                                     android:text=""
                                     android:textColor="#3a445e"
                                     android:textSize="11sp"
                                     custom:typeface="Brandon_med" />-->

                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:gravity="center_vertical|right"
                        android:paddingRight="4dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingBottom="8dp"
                            android:paddingRight="14dp"
                            android:paddingTop="8dp"

                            >

                            <LinearLayout
                                android:id="@+id/attendi_three_layout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:visibility="gone">

                                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:id="@+id/iv_pic_one1"
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentTop="true"
                                    android:layout_gravity="center_horizontal"
                                    android:visibility="invisible"
                                    app:civ_border_color="#27314A"
                                    app:civ_border_width="0.2dp" />

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/iv_pic_two2"
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:layout_alignParentTop="true"
                                    android:layout_centerHorizontal="true"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginLeft="4dp"
                                    android:visibility="invisible"
                                    custom:civ_border_color="#27314A"
                                    custom:civ_border_width="0.2dp" />

                                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:id="@+id/iv_pic_three3"
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentTop="true"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginLeft="4dp"
                                    android:visibility="invisible"
                                    app:civ_border_color="#27314A"
                                    app:civ_border_width="0.2dp" />


                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/attendi_more_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="6dp"
                            android:orientation="horizontal"
                            android:visibility="visible">

                            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/iv_pic_one"
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/whitecircle"
                                android:visibility="invisible"
                                app:civ_border_color="#27314A"
                                app:civ_border_width="0.3dp" />

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/iv_pic_two"
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginLeft="-4dp"
                                android:background="@drawable/whitecircle"
                                android:visibility="invisible"
                                app:civ_border_color="#27314A"
                                app:civ_border_width="0.3dp" />

                            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/iv_pic_three"
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginLeft="-4dp"
                                android:background="@drawable/whitecircle"
                                android:visibility="invisible"
                                app:civ_border_color="#27314A"
                                app:civ_border_width="0.3dp" />


                            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/iv_count"
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginLeft="-4dp"
                                android:background="@drawable/whitecircle"
                                android:visibility="invisible"
                                app:civ_border_color="#27314A"
                                app:civ_border_width="1.4dp" />


                        </LinearLayout>

                        <com.uactiv.widgets.CustomTextView
                            android:id="@+id/textView11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/attendi_more_layout"
                            android:layout_alignLeft="@+id/attendi_more_layout"
                            android:layout_alignRight="@+id/attendi_more_layout"
                            android:layout_alignStart="@+id/attendi_more_layout"
                            android:layout_marginBottom="8dp"
                            android:layout_marginLeft="80dp"
                            android:text="+11"
                            android:textSize="8sp"
                            android:visibility="invisible"
                            custom:typeface="Brandon_bld" />


                    </RelativeLayout>


                </RelativeLayout>

                <com.uactiv.widgets.CustomTextView
                    android:id="@+id/seprator"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/pickup_Layout"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="-4dp"
                    android:background="@color/black" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/iv_like"
                        android:layout_width="21dp"
                        android:layout_height="22dp"
                        android:layout_alignTop="@+id/iv_share"
                        android:layout_marginLeft="52dp"
                        android:layout_marginStart="52dp"
                        android:layout_marginTop="4dp"
                        android:src="@drawable/ic_like" />

                    <com.uactiv.widgets.CustomTextView
                        android:id="@+id/tv_like_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="4dp"
                        android:layout_toEndOf="@+id/iv_like"
                        android:layout_toRightOf="@+id/iv_like"
                        android:gravity="center|center_vertical"
                        android:text="10k"
                        android:textColor="#3a445e"
                        android:textSize="11sp"
                        custom:typeface="Brandon_med" />

                    <ImageView
                        android:id="@+id/iv_share"
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"

                        android:layout_alignParentTop="true"
                        android:layout_marginEnd="81dp"
                        android:layout_marginRight="81dp"
                        android:layout_weight="2.8"
                        android:src="@drawable/ic_share" />

                </RelativeLayout>
            </LinearLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>
