<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/challenge_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="85dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:src="@drawable/d_popup_challenge_txt" />

        <com.uactiv.widgets.CustomTextView
            android:id="@+id/tvChallenge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"
            android:padding="@dimen/margin_medium_size"
            android:text="Let everyone know that you're accepted this challenge on Facebook or Twitter! Good Luck!"
            android:textColor="@color/edit_msg_color"
            custom:typeface="Brandon_med" />

        <LinearLayout
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvChallenge"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:paddingBottom="30dp"
            android:paddingTop="30dp">


            <com.uactiv.widgets.CustomButton
                android:id="@+id/share"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/empty_rect_bg_colorpri"
                android:drawableLeft="@drawable/fb_icon"
                android:minHeight="35dp"
                android:paddingLeft="5dp"
                android:text="share"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_4"
                custom:typeface="Brandon_med" />

            <com.uactiv.widgets.CustomButton
                android:id="@+id/tweet"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toLeftOf="@+id/imgTick"
                android:layout_toRightOf="@+id/share"
                android:background="@drawable/empty_rect_bg_colorpri"
                android:drawableLeft="@drawable/tweet_icon"
                android:minHeight="35dp"
                android:paddingLeft="5dp"
                android:text="tweet"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_4"
                custom:typeface="Brandon_med" />
        </LinearLayout>


        <ImageView
            android:layout_below="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_action_buttonuactive"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/profileparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imageView2">

            <com.uactiv.views.CircularImageViews
                android:id="@+id/img_challenger_two"
                android:layout_width="@dimen/dp_160"
                android:layout_height="@dimen/dp_160"
                android:scaleType="centerCrop"
                app:civ_border_color="#E6E6E6"
                app:civ_border_width="2dp"
                app:civ_shadow="true"
                app:civ_shadow_color="@color/grey"
                app:civ_shadow_radius="8" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/imageView2">

            <com.uactiv.views.CircularImageViews
                android:id="@+id/img_challenger_one"
                android:layout_width="@dimen/dp_160"
                android:layout_height="@dimen/dp_160"
                android:scaleType="centerCrop"
                app:civ_border_color="#E6E6E6"
                app:civ_border_width="2dp"
                app:civ_shadow="true"
                app:civ_shadow_color="@color/grey"
                app:civ_shadow_radius="8" />
        </RelativeLayout>


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/d_img_margin_neg"
            android:layout_marginRight="@dimen/d_img_margin_neg"
            android:src="@drawable/d_popup_profile_vs" />


    </RelativeLayout>
</RelativeLayout>