<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/profile_name_box"
        android:padding="@dimen/margin_medium_size">

        <com.uactiv.widgets.CustomTextView
            android:id="@+id/tvBuddyDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:textColorLink="@color/holo_blue"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/include_top_size"
            android:text=""
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_3"
            custom:typeface="Brandon_med" />


        <RelativeLayout
            android:id="@+id/layone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvBuddyDetails">

            <com.uactiv.widgets.CustomTextView
                android:id="@+id/tvSquash"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="@dimen/include_top_size"
                android:visibility="gone"
                android:layout_marginTop="@dimen/margin_medium_size"
                android:background="@drawable/profile_blue_box"
                android:paddingLeft="@dimen/margin_medium_size"
                android:paddingRight="@dimen/margin_medium_size"
                android:textColor="@color/white"
                custom:typeface="Brandon_bld" />

            <ImageView
                android:id="@+id/rate_img_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tvSquash"
                android:visibility="gone"
                android:layout_alignTop="@+id/tvSquash"
                android:layout_marginLeft="@dimen/img_margin_neg"
                android:layout_toRightOf="@+id/tvSquash" />

            <com.uactiv.widgets.CustomTextView
                android:id="@+id/tvParkour"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/include_top_size"
                android:layout_marginLeft="@dimen/margin_medium_size"
                android:visibility="gone"
                android:paddingRight="@dimen/margin_medium_size"
                android:layout_marginTop="@dimen/margin_medium_size"
                android:layout_toRightOf="@+id/rate_img_one"
                android:background="@drawable/profile_blue_box"
                android:gravity="center"
                android:paddingLeft="@dimen/margin_medium_size"

                android:textColor="@color/white"
                custom:typeface="Brandon_bld" />

            <ImageView
                android:id="@+id/rate_img_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_alignBottom="@+id/tvParkour"
                android:layout_alignTop="@+id/tvParkour"
                android:layout_marginLeft="@dimen/img_margin_neg"
                android:layout_toRightOf="@+id/tvParkour" />


            <com.uactiv.widgets.CustomTextView
                android:id="@+id/tv_act_five"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/include_top_size"
                android:layout_marginLeft="@dimen/margin_medium_size"
                android:layout_marginTop="@dimen/margin_medium_size"
                android:layout_toRightOf="@+id/rate_img_two"
                android:background="@drawable/profile_blue_box"
                android:gravity="center"
                android:paddingRight="@dimen/margin_medium_size"
                android:paddingLeft="@dimen/margin_medium_size"
                android:visibility="gone"

                android:textColor="@color/white"
                custom:typeface="Brandon_bld" />

            <ImageView
                android:id="@+id/rate_img_five"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_alignBottom="@+id/tv_act_five"
                android:layout_alignTop="@+id/tv_act_five"
                android:layout_marginLeft="@dimen/img_margin_neg"
                android:layout_toRightOf="@+id/tvParkour" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/laytwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layone">


            <com.uactiv.widgets.CustomTextView
                android:id="@+id/tvYoga"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/include_top_size"
                android:background="@drawable/profile_blue_box"
                android:gravity="center"
                android:paddingRight="@dimen/margin_medium_size"
                android:visibility="gone"
                android:paddingLeft="@dimen/margin_medium_size"

                android:textColor="@color/white"
                custom:typeface="Brandon_bld" />

            <ImageView
                android:id="@+id/rate_img_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_alignBottom="@+id/tvYoga"
                android:layout_alignTop="@+id/tvYoga"
                android:layout_marginLeft="@dimen/img_margin_neg"
                android:layout_toRightOf="@+id/tvYoga" />


            <com.uactiv.widgets.CustomTextView
                android:id="@+id/tvRockClimbing"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/include_top_size"
                android:layout_marginLeft="@dimen/margin_medium_size"
                android:layout_toRightOf="@+id/rate_img_three"
                android:paddingRight="@dimen/margin_medium_size"
                android:background="@drawable/profile_blue_box"
                android:visibility="gone"
                android:gravity="center"
                android:paddingLeft="@dimen/margin_medium_size"
                android:textColor="@color/white"
                custom:typeface="Brandon_bld" />

            <ImageView
                android:id="@+id/rate_img_four"
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tvRockClimbing"
                android:layout_alignTop="@+id/tvRockClimbing"
                android:layout_marginLeft="@dimen/img_margin_neg"
                android:layout_toRightOf="@+id/tvRockClimbing" />


            <com.uactiv.widgets.CustomTextView
                android:id="@+id/tv_act_six"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/include_top_size"
                android:layout_marginLeft="@dimen/margin_medium_size"
                android:layout_toRightOf="@+id/rate_img_four"
                android:background="@drawable/profile_blue_box"
                android:paddingRight="@dimen/margin_medium_size"
                android:visibility="gone"
                android:gravity="center"
                android:paddingLeft="@dimen/margin_medium_size"

                android:textColor="@color/white"
                custom:typeface="Brandon_bld" />

            <ImageView
                android:id="@+id/rate_img_six"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_alignBottom="@+id/tv_act_six"
                android:layout_alignTop="@+id/tv_act_six"
                android:layout_marginLeft="@dimen/img_margin_neg"
                android:layout_toRightOf="@+id/tv_act_six" />
        </RelativeLayout>

        <LinearLayout
            android:layout_below="@+id/laytwo"
            android:layout_width="match_parent"

            android:orientation="vertical"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.uactiv.widgets.CustomTextView
                    android:id="@+id/tvAddress"
                    android:layout_width="fill_parent"
                    android:text="Address:"
                    custom:typeface="Brandon_med"
                    android:padding="@dimen/dp_2"
                    android:drawableLeft="@drawable/green_mappin"
                    android:drawablePadding="@dimen/dp_15"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_3"
                    android:gravity="left|center"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <com.uactiv.widgets.CustomTextView
                android:id="@+id/tvphoneno"
                android:layout_width="wrap_content"
                android:text="Phone :"
                android:drawableLeft="@drawable/ic_phone"
                android:padding="@dimen/dp_2"
                android:drawablePadding="@dimen/dp_15"
                custom:typeface="Brandon_med"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_3"
                android:gravity="center"
                android:layout_height="wrap_content" />

            <com.uactiv.widgets.CustomTextView
                android:id="@+id/tvLandLine"
                android:layout_width="wrap_content"
                android:text="Landline :"
                android:drawableLeft="@drawable/ic_phone"
                android:padding="@dimen/dp_2"
                android:drawablePadding="@dimen/dp_15"
                custom:typeface="Brandon_med"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_3"
                android:gravity="center"
                android:layout_height="wrap_content" />



            <com.uactiv.widgets.CustomTextView
                android:id="@+id/tvEmail"
                android:layout_width="wrap_content"
                android:text="E-Mail :"
                android:drawableLeft="@drawable/ic_message"
                android:padding="@dimen/dp_2"
                android:drawablePadding="@dimen/dp_15"
                android:gravity="center"
                custom:typeface="Brandon_med"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_3"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </RelativeLayout>



</RelativeLayout>