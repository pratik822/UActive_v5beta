<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/myscroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCF1FC"
    android:fillViewport="true"
    android:orientation="vertical"
    android:scrollbars="none">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/mylay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="1">


            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="@dimen/logo_img_width"
                android:layout_height="@dimen/logo_img_height"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/img_padding_topone"
                android:scaleType="fitXY"
                android:src="@drawable/ic_uactiv" />

            <com.uactiv.widgets.CustomTextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView7"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:paddingLeft="10dp"

                android:text="Explore. Engage. Exercise."
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/medium_size"
                custom:typeface="Brandon_med" />

            <LinearLayout
                android:id="@+id/mylays"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">


                <ViewFlipper
                    android:id="@+id/flipper"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1.70"
                    android:paddingLeft="10dp">

                    <LinearLayout
                        android:id="@+id/login_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <com.uactiv.widgets.CustomEditText
                            android:id="@+id/signin_email_ed"
                            android:layout_width="@dimen/btn_width"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_text_underline"
                            android:drawableLeft="@drawable/ic_mynewemail"
                            android:drawablePadding="@dimen/edt_drawable_padding"
                            android:hint="E-mail address"
                            android:padding="@dimen/edt_padding"
                            android:singleLine="true"
                            android:textColorHint="@color/colorPrimary"
                            android:textSize="@dimen/medium_size"
                            custom:typeface="Brandon_reg" />

                        <com.uactiv.widgets.CustomEditText
                            android:id="@+id/signin_pwd_ed"
                            android:layout_width="@dimen/btn_width"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_text_underline"
                            android:drawableLeft="@drawable/ic_mynewpassword"
                            android:drawablePadding="@dimen/edt_drawable_padding"
                            android:hint="Password"
                            android:inputType="textPassword"
                            android:padding="@dimen/edt_padding"
                            android:singleLine="true"
                            android:textColorHint="@color/colorPrimary"
                            android:textSize="@dimen/medium_size"
                            custom:typeface="Brandon_reg" />

                        <com.uactiv.widgets.CustomTextView
                            android:id="@+id/forgotbtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="Forgot password?"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/small_size"
                            custom:typeface="Brandon_reg" />

                        <com.uactiv.widgets.CustomButton
                            android:id="@+id/signin_btn"
                            android:layout_width="@dimen/btn_width"
                            android:layout_height="@dimen/btn_height"
                            android:background="@drawable/btn_shapenew"
                            android:text="Log in"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="@dimen/medium_normal_size"
                            custom:typeface="Brandon_med" />

                        <com.uactiv.widgets.CustomButton
                            android:id="@+id/fbbtn"
                            android:layout_width="@dimen/btn_width"
                            android:layout_height="@dimen/btn_height"
                            android:layout_marginBottom="@dimen/edt_padding"
                            android:layout_marginTop="@dimen/edt_drawable_padding"
                            android:background="@drawable/btn_shape"
                            android:drawableLeft="@drawable/facebook"
                            android:drawablePadding="26dp"
                            android:gravity="left|center"
                            android:paddingLeft="8dp"
                            android:text="Log in with Facebook"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="@dimen/medium_normal_size"
                            custom:typeface="Brandon_med" />

                        <LinearLayout
                            android:id="@+id/ortvlinlay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:orientation="horizontal">

                            <View
                                android:layout_width="@dimen/viewone"
                                android:layout_height="1dp"
                                android:layout_gravity="center_vertical"
                                android:background="#3a445e" />

                            <com.uactiv.widgets.CustomTextView
                                android:id="@+id/ortxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/signin_btn"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:padding="4dp"
                                android:text="or"
                                android:textAllCaps="false"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/medium_normal_size"
                                custom:typeface="Brandon_reg" />

                            <View
                                android:layout_width="90dp"
                                android:layout_height="1dp"
                                android:layout_gravity="center_vertical"
                                android:background="#3a445e" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/custom_margin_top"
                            android:orientation="horizontal">

                            <com.uactiv.widgets.CustomTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Don't have an account yet? "
                                android:textAllCaps="false"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/medium_size"
                                custom:typeface="Brandon_reg" />

                            <com.uactiv.widgets.CustomTextView
                                android:id="@+id/signup"
                                android:layout_width="63dp"
                                android:layout_height="wrap_content"
                                android:paddingLeft="1dp"
                                android:text="Sign up"
                                android:textAllCaps="false"
                                android:textColor="#8DBDE3"
                                android:textSize="@dimen/medium_size"
                                custom:typeface="Brandon_bld" />

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/forgot_pwlayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.uactiv.widgets.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/img_padding_topforgotpw"
                            android:padding="@dimen/edt_padding"
                            android:paddingLeft="2dp"
                            android:text="Forgot your Password?"
                            android:textAllCaps="false"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/largesize"
                            custom:typeface="Brandon_bld" />

                        <com.uactiv.widgets.CustomTextView
                            android:layout_width="@dimen/btn_width"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:gravity="center"
                            android:padding="@dimen/edt_padding"
                            android:text="Enter your email below to recive a password reset link."
                            android:textAllCaps="false"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/medium_normal_size"
                            custom:typeface="Brandon_reg" />

                        <com.uactiv.widgets.CustomEditText
                            android:id="@+id/forgot_email_ed"
                            android:layout_width="@dimen/btn_width"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/custom_margin_topsignup"
                            android:background="@drawable/edit_text_underline"
                            android:drawableLeft="@drawable/ic_mynewemail"
                            android:drawablePadding="@dimen/edt_drawable_padding"
                            android:hint="E-mail address"
                            android:padding="@dimen/edt_padding"
                            android:singleLine="true"
                            android:textColorHint="@color/colorPrimary"
                            android:textSize="@dimen/medium_size"
                            custom:typeface="Brandon_reg" />


                        <com.uactiv.widgets.CustomButton
                            android:id="@+id/submit_area"
                            android:layout_width="@dimen/btn_width"
                            android:layout_height="@dimen/btn_height"
                            android:layout_marginTop="18dp"
                            android:background="@drawable/btn_shapenew"
                            android:text="Submit"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="@dimen/medium_size"
                            custom:typeface="Brandon_med" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.uactiv.widgets.CustomEditText
                            android:id="@+id/fname"
                            android:layout_width="@dimen/btn_width"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_text_underline"
                            android:drawableLeft="@drawable/ic_newprofile"
                            android:drawablePadding="@dimen/edt_drawable_padding"
                            android:hint="First Name"
                            android:padding="@dimen/edt_padding"
                            android:singleLine="true"
                            android:textColorHint="@color/colorPrimary"
                            android:textSize="@dimen/medium_size"
                            custom:typeface="Brandon_reg" />


                        <com.uactiv.widgets.CustomEditText
                            android:id="@+id/lname"
                            android:layout_width="@dimen/btn_width"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_text_underline"
                            android:drawableLeft="@drawable/ic_newprofile"
                            android:drawablePadding="@dimen/edt_drawable_padding"
                            android:hint="Last Name"
                            android:padding="@dimen/edt_padding"
                            android:singleLine="true"
                            android:textColorHint="@color/colorPrimary"
                            android:textSize="@dimen/medium_size"
                            custom:typeface="Brandon_reg" />

                        <com.uactiv.widgets.CustomEditText
                            android:id="@+id/signin_email_edone"
                            android:layout_width="@dimen/btn_width"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_text_underline"
                            android:drawableLeft="@drawable/ic_mynewemail"
                            android:drawablePadding="@dimen/edt_drawable_padding"
                            android:hint="E-mail address"
                            android:padding="@dimen/edt_padding"
                            android:singleLine="true"
                            android:textColorHint="@color/colorPrimary"
                            android:textSize="@dimen/medium_size"
                            custom:typeface="Brandon_reg" />

                        <com.uactiv.widgets.CustomEditText
                            android:id="@+id/signin_pwd_edone"
                            android:layout_width="@dimen/btn_width"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:background="@drawable/edit_text_underline"
                            android:drawableLeft="@drawable/ic_mynewpassword"
                            android:drawablePadding="@dimen/edt_drawable_padding"
                            android:hint="Password"
                            android:inputType="textPassword"
                            android:maxLines="1"
                            android:padding="@dimen/edt_padding"
                            android:textColorHint="@color/colorPrimary"
                            android:textSize="@dimen/medium_size"
                            custom:typeface="Brandon_reg" />


                        <com.uactiv.widgets.CustomButton
                            android:id="@+id/signupone"
                            android:layout_width="@dimen/btn_width"
                            android:layout_height="@dimen/btn_height"
                            android:layout_marginBottom="2dp"
                            android:layout_marginTop="@dimen/custom_margin_topsignup"
                            android:background="@drawable/btn_shapenew"
                            android:text="Next"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="@dimen/medium_normal_size"
                            custom:typeface="Brandon_med" />


                        <com.uactiv.widgets.CustomButton
                            android:id="@+id/fbbtnone"
                            android:layout_width="@dimen/btn_width"
                            android:layout_height="@dimen/btn_height"
                            android:layout_marginBottom="@dimen/edt_padding"
                            android:layout_marginTop="@dimen/edt_drawable_padding"
                            android:background="@drawable/btn_shape"
                            android:drawableLeft="@drawable/facebook"
                            android:drawablePadding="26dp"
                            android:gravity="left|center"
                            android:paddingLeft="8dp"
                            android:text="Sign up with Facebook"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="@dimen/medium_normal_size"
                            custom:typeface="Brandon_med" />

                        <com.uactiv.widgets.CustomTextView
                            android:id="@+id/txt_gestlogin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:layout_marginTop="@dimen/custom_margin_topsignup"
                            android:text="Continue as a guest"
                            android:textColor="#90BEE2"
                            android:textSize="@dimen/medium_gest"
                            custom:typeface="Brandon_reg" />

                        <com.uactiv.widgets.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/custom_margin_topsignupother"
                            android:gravity="center"
                            android:text="By signing up, you agree to our"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/small_size"
                            custom:typeface="Brandon_reg" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <com.uactiv.widgets.CustomTextView
                                android:id="@+id/txt_turms"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Terms &amp; Conditions "
                                android:textColor="#90BEE2"
                                android:textSize="@dimen/small_size"
                                custom:typeface="Brandon_bld" />

                            <com.uactiv.widgets.CustomTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="and "
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/small_size"
                                custom:typeface="Brandon_reg" />

                            <com.uactiv.widgets.CustomTextView
                                android:id="@+id/txt_policy"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Privacy Policy."
                                android:textColor="#90BEE2"
                                android:textSize="@dimen/small_size"
                                custom:typeface="Brandon_bld" />

                        </LinearLayout>
                    </LinearLayout>

                </ViewFlipper>

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_alignParentBottom="true"
                    android:layout_weight="0.34"
                    android:adjustViewBounds="true"
                    android:baselineAlignBottom="true"
                    android:paddingBottom="8dp"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:paddingTop="4dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/sports" />

            </LinearLayout>

        </LinearLayout>

        <include layout="@layout/loder_view"></include>
    </RelativeLayout>

</ScrollView>