<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEFEFE">

    <android.support.v7.widget.CardView
        android:id="@+id/view8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <ImageView
                    android:id="@+id/gifImageView"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="45dp"
                    android:scaleType="fitXY" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_pic"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center_horizontal"
                    android:visibility="visible" />

                <com.uactiv.widgets.CustomTextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_toEndOf="@+id/iv_pic"
                    android:layout_toRightOf="@+id/iv_pic"
                    android:text="Mumbai Riders!"
                    android:textColor="#3a445e"
                    android:textSize="13sp"
                    custom:typeface="Brandon_med" />

                <com.uactiv.widgets.CustomTextView
                    android:id="@+id/tv_pickupname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tv_title"
                    android:layout_alignStart="@+id/tv_title"
                    android:layout_below="@+id/imageView9"
                    android:text="Created a yoga pickup!"
                    android:textColor="#9AA3B2"
                    android:textSize="12sp"
                    custom:typeface="Brandon_reg" />

                <com.uactiv.widgets.CustomTextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/imageView9"
                    android:layout_alignRight="@+id/imageView9"
                    android:layout_alignTop="@+id/tv_pickupname"
                    android:text="7 hours ago"
                    android:textColor="#9AA3B2"
                    android:textSize="12sp"
                    custom:typeface="Brandon_reg" />

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignBottom="@+id/tv_title"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="11dp"
                    android:layout_marginRight="11dp"
                    android:src="@drawable/dots"
                    android:visibility="invisible" />

                <com.uactiv.widgets.CustomButton
                    android:id="@+id/btn_knowmore"
                    android:layout_width="65dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/gifImageView"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/btn_shape_konwmore"
                    android:text="Know more"
                    android:textAllCaps="false"
                    android:textSize="11sp"
                    custom:typeface="Brandon_med" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/view8"
                android:layout_alignStart="@+id/view8"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingLeft="7dp"
                    android:orientation="horizontal"
                    android:weightSum="3">
                    <ImageView
                        android:src="@drawable/calenn"
                        android:layout_width="13dp"
                        android:layout_height="13dp" />

                    <com.uactiv.widgets.CustomTextView
                        android:id="@+id/tv_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.05"
                        android:gravity="center|left"
                        android:paddingLeft="4dp"
                        android:text="Tue,Nov 8,2017"
                        android:textColor="#3a445e"
                        android:textSize="11sp"
                        custom:typeface="Brandon_med" />
                    <ImageView
                        android:src="@drawable/mycustclock"
                        android:layout_width="13dp"
                        android:layout_marginLeft="8dp"
                        android:layout_height="13dp" />

                    <com.uactiv.widgets.CustomTextView
                        android:id="@+id/tv_pickup_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.90"
                        android:gravity="center|left"
                        android:paddingLeft="6dp"
                        android:text="9:00PM"
                        android:textColor="#3a445e"
                        android:textSize="11sp"
                        custom:typeface="Brandon_med" />
                    <ImageView
                        android:src="@drawable/venues"
                        android:layout_width="13.5dp"
                        android:layout_height="13.8dp" />

                    <com.uactiv.widgets.CustomTextView
                        android:id="@+id/tv_location"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:paddingLeft="8dp"
                        android:text="Ghatkopar"
                        android:textColor="#3a445e"
                        android:textSize="11sp"
                        custom:typeface="Brandon_med" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="6dp"
                    android:paddingLeft="8.9dp"
                    android:gravity="left|center"
                    android:orientation="horizontal"
                    android:weightSum="3">
                    <ImageView
                        android:src="@drawable/spotss"
                        android:layout_width="13dp"
                        android:layout_height="13dp" />
                    <com.uactiv.widgets.CustomTextView
                        android:id="@+id/tv_spots"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="4dp"
                        android:layout_weight="1.02"
                        android:gravity="center|left"
                        android:text="8 spot left"
                        android:textColor="#3a445e"
                        android:textSize="11sp"
                        custom:typeface="Brandon_med" />
                    <ImageView
                        android:src="@drawable/rupee"
                        android:layout_marginLeft="8dp"
                        android:layout_width="12dp"
                        android:layout_height="12dp" />

                    <com.uactiv.widgets.CustomTextView
                        android:id="@+id/tv_paid"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.85"
                        android:paddingLeft="6dp"

                        android:gravity="center|left"
                        android:text="Paid"
                        android:textColor="#3a445e"
                        android:textSize="11sp"
                        custom:typeface="Brandon_med" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <de.hdodenhof.circleimageview.CircleImageView
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/iv_pic_one"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_gravity="center_horizontal"
                            app:civ_border_width="1dp"
                            app:civ_border_color="#27314A"
                            android:visibility="visible" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/iv_pic_two"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentLeft="true"

                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginLeft="-4dp"
                            app:civ_border_width="1dp"
                            app:civ_border_color="#27314A"
                            android:visibility="visible" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/iv_pic_three"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginLeft="-4dp"
                            app:civ_border_width="1dp"
                            app:civ_border_color="#27314A"
                            android:visibility="visible" />

                        <com.uactiv.widgets.CustomTextView
                            android:id="@+id/tv_attending_count"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_weight="1"
                            android:gravity="center|left"
                            android:text="4+ going"
                            android:textColor="#3a445e"
                            android:textSize="11sp"
                            custom:typeface="Brandon_med" />
                    </LinearLayout>

                </LinearLayout>

                <com.uactiv.widgets.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/black" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/iv_like"
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="65dp"
                        android:layout_marginStart="65dp"
                        android:src="@drawable/ic_like" />

                    <com.uactiv.widgets.CustomTextView
                        android:id="@+id/tv_like_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/iv_like"
                        android:layout_toRightOf="@+id/iv_like"
                        android:gravity="center|center_vertical"
                        android:text="10k"
                        android:textColor="#3a445e"
                        android:textSize="11sp"
                        custom:typeface="Brandon_med" />

                    <ImageView
                        android:id="@+id/iv_share"
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"

                        android:layout_alignParentTop="true"
                        android:layout_marginEnd="81dp"
                        android:layout_marginRight="81dp"
                        android:layout_weight="2.8"
                        android:src="@drawable/ic_share" />

                </RelativeLayout>


            </LinearLayout>
        </LinearLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>
