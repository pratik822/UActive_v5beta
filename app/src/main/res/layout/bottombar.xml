<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#57657f" >

    <LinearLayout
        android:id="@+id/layoutLeft"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_neg_normal"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imgDashBoard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/bottom_btn_first_normal" />

        <ImageView
            android:id="@+id/imgMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/bottom_mail_icon_normal" />

        <ImageView
            android:id="@+id/imgCalendar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/bottom_calendar_icon_normal" />

        <ImageView
            android:id="@+id/imgMenuIcon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/bottom_menu_icon" />
    </LinearLayout>

</RelativeLayout>