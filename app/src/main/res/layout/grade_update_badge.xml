<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:custom="http://schemas.android.com/apk/res-auto"
              android:id="@+id/main_lay"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/transparent_white_dark"
              android:gravity="center"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/rect_bg_with_orange_border">

            <com.uactiv.widgets.CustomTextView
                android:id="@+id/badge_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="52dp"
                android:padding="6dp"
                android:text="@string/badge_update_txt"
                android:textColor="@color/badge_txt_color"
                android:textSize="18sp"
                custom:typeface="Brandon_bld"/>

            <com.uactiv.widgets.CustomTextView
                android:id="@+id/badge_fb_share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/badge_txt"
                android:layout_marginTop="12dp"
                android:background="@color/com_facebook_blue"
                android:drawableLeft="@drawable/fb_icon"
                android:drawablePadding="4dp"
                android:visibility="gone"
                android:gravity="center"
                android:padding="12dp"
                android:text="Share on Facebook"
                android:textColor="@color/white"
                android:textSize="20sp"
                custom:typeface="Brandon_bld"/>

            <com.uactiv.widgets.CustomTextView
                android:id="@+id/badge_thanks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/badge_fb_share"
                android:background="@color/green"
                android:gravity="center"
                android:padding="12dp"
                android:text="Thanks"
                android:textColor="@color/white"
                android:textSize="20sp"
                custom:typeface="Brandon_bld"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/batch_icon"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/batchicon_b"
                android:contentDescription="@string/app_name"/>

            <com.uactiv.widgets.CustomTextView
                android:id="@+id/batch_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="74dp"
                android:background="@drawable/round_rect_pink"
                android:gravity="center"
                android:padding="6dp"
                android:text="CONTENDER"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                custom:typeface="Brandon_bld"/>

        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>