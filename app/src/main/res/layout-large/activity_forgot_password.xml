<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCF1FC"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="360dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_uactiv" />


        <com.uactiv.widgets.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Explore.Engage.Exercise"
            android:textSize="@dimen/xmedium_size"
            android:textColor="@color/black"
            custom:typeface="Brandon_bld"
            android:id="@+id/textView5"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/imageView7"
            android:layout_centerHorizontal="true" />



    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">
        <com.uactiv.widgets.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot your Password?"
            android:textAllCaps="false"
            android:paddingLeft="2dp"
            android:padding="@dimen/edt_padding"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/xmedium_largesize"
            custom:typeface="Brandon_bld" />
        <com.uactiv.widgets.CustomTextView
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:text="Enter your email below to recive a password reset link."
            android:textAllCaps="false"
            android:padding="@dimen/edt_padding"
            android:layout_marginBottom="12dp"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            android:textSize="@dimen/xmedium_size"
            custom:typeface="Brandon_med" />

        <com.uactiv.widgets.CustomEditText
            android:id="@+id/forgot_email_ed"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_underline"
            android:drawableLeft="@drawable/ic_email"
            android:drawablePadding="@dimen/edt_drawable_padding"
            android:ems="14"
            android:hint="E-mail address"
            android:padding="@dimen/edt_padding"
            android:singleLine="true"
            android:textColorHint="@color/colorPrimary"
            android:textSize="@dimen/xmedium_size"
            custom:typeface="Brandon_med" />


        <com.uactiv.widgets.CustomButton
            android:id="@+id/submit_area"
            android:layout_width="@dimen/btn_widthlarge"
            android:layout_height="@dimen/btn_height"
            android:background="@drawable/btn_shapenew"
            android:text="Submit"
            android:textAllCaps="false"
            android:layout_margin="@dimen/edt_padding"
            android:textColor="@color/white"
            android:textSize="@dimen/xmedium_size"
            custom:typeface="Brandon_med" />
    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sports"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_alignParentBottom="true"
        android:adjustViewBounds="true"
        android:baselineAlignBottom="false" />
    <include layout="@layout/loder_view" />
</RelativeLayout>
